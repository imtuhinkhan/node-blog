<%- include('./partials/header.ejs') %>
<%- include('./partials/menu.ejs') %>
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>News</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item ">News</li>
              <li class="breadcrumb-item active">News list</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
         
          <!-- right column -->
          <div class="col-md-12">
            <!-- general form elements disabled -->
            <div class="card card-success">
              <div class="card-header">
                <h3 class="card-title">News List</h3>
                <a href="/admin/news/add" class="btn btn-primary btn-sm" style="float: right;">Add News</a>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                <table id="example1" class="table table-bordered table-striped">
                  <thead>
                  <tr>
                    <th>#</th>
                    <th>News Title</th>
                    <th>Category</th>
                    <th>Feature Image</th>
                    <th>Action</th>
                  </tr>
                  </thead>
                  <tbody>
                    <% for(let news of blog){ %>
                 <tr>
                   <td>#</td>
                   <td><%= news.title %></td>
                   <td>
                    <% if(news.cat){ %>
                      <% for(let ncat of news.cat){ %>
                        <%= ncat.title %><br>
                    <% } } %>
                   </td>
                   <td><img src="/<%= news.image %>" width="100"></td>
                    <td>
                      <a href="/admin/blog/edit/<%= news._id %>" class="btn btn-xs btn-warning">Edit</a>
                      <a href="/admin/blog/delete/<%= news._id %>" class="btn btn-xs btn-danger">Delete</a>
                    </td>
                 </tr>
                 <% } %>
                  </tbody>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
          <!--/.col (right) -->
        </div>
        <!-- /.row -->
      </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
<%- include('./partials/footer.ejs') %>
