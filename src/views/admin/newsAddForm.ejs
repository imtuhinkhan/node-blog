<%- include('./partials/header.ejs') %>
<%- include('./partials/menu.ejs') %>
  
  <div class="content-wrapper">
    
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0 text-dark">Add News</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">Add new news</li>
            </ol>
          </div>
        </div>
      </div>
    </div>
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <!-- left column -->
          <div class="col-md-12">
            <!-- general form elements -->
            <div class="card card-primary">
              <div class="card-header">
                <h3 class="card-title">Add/Edit Category</h3>
              </div>
              <form action="/admin/news/save" method="POST" enctype="multipart/form-data">
                <%if (oldBlog) { %> 
                  <input type="hidden" name="cid" value="<%=  oldBlog._id %>">
                <% } %>  
                <div class="card-body">              
                  <div class="form-group">
                    <label for="exampleInputEmail1">Title</label>
                    <input type="text" name="title" class="form-control" id="title" placeholder="News Title" <%if (oldBlog) { %>  value="<%=  oldBlog.title %>" <% } %>> 
                  </div>
                  <div class="form-group">
                    <label for="exampleInputEmail1">Description</label>
                    <textarea class="textarea" id="editor" name="description" placeholder="Place some text here"
                    style="width: 100%; height: 500px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;"><%if (oldBlog) { %><%=  oldBlog.description %><% } %></textarea>
       
                  </div> 
                  <div class="form-group">
                    <label for="exampleInputEmail1">Category</label><br>
                    <% for(let cats of category){ %>
                    <div class="icheck-success d-inline">
                      <input type="checkbox" id="<%= cats._id %>" name="category[]" value="<%= cats._id %>" <% if(oldBlog && oldBlog.newsCategory.includes(cats._id)){ %> checked <% } %>>
                      <label for="<%= cats._id %>"><%= cats.title %></label><br>
                    </div>
                    <% } %>
                  </div> 

                  <div class="form-group">
                    <label for="exampleInputEmail1">Meta Tags</label>
                    <input type="text" name="tag" class="form-control" id="title" placeholder="News Title" <%if (oldBlog) { %>  value="<%=  oldBlog.metaTag %>" <% } %>> 
                  </div> 
                  <div class="form-group">
                    <label for="exampleInputEmail1">Meta Descripton</label>
                    <input type="text" name="metaDescription" class="form-control" id="title" placeholder="News Title" <%if (oldBlog) { %>  value="<%=  oldBlog.metaDescription %>" <% } %>> 
                  </div>                
                  <div class="form-group">
                    <label for="exampleInputFile">Feature Image</label>
                    <div class="input-group">
                      <div class="custom-file">
                        <input type="file" name="image">
                      </div>
                    </div>
                  </div>
                </div>                
                <div class="card-footer">
                  <button type="submit" class="btn btn-primary">Submit</button>
                </div>
              </form>  
              </div>
            </div>
          </div>
        </section>    
  </div>  
  
<%- include('./partials/footer.ejs') %>
 